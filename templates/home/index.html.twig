{% extends "base.html.twig" %}

{% block title %}
    Home
{% endblock title %}

{% block main %}
    {% set errors =  get("errors") %}
    <div class="col-md-9 ms-sm-auto col-lg-10 px-md-4" style="height: calc(100vh - 56px);">
        <h1 class="text-center mt-3">Car Service Management</h1>
        <form
            action="/service-details"
            method="GET"
            style="height: max-content"
        >
            <div
                class="container d-flex flex-column align-items-center"
                style="height: calc(100vh - 56px); margin-top: 20%"
            >
                <div class="input-group rounded-3 w-50">
                    <input
                        type="text"
                        name="clientCode"
                        class="form-control form-control-lg {{ errors.clientCode ? 'is-invalid' : '' }}"
                        placeholder="WprowadÅº kod"
                        aria-label="customer-code"
                        value="{{ get("old").clientCode }}"
                    >
                    <button class="btn btn-secondary rounded-end">
                        <i class="fa-solid fa-magnifying-glass"></i>
                    </button>
                    <span class="invalid-feedback">{{ errors.clientCode | first }}</span>
                </div>
            </div>
        </form>
    </div>
{% endblock main %}

