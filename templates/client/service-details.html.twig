<div class="w-50 h-50 accordion" id="carsAccordion">
    {% for car in cars %}
        <div class="accordion-item">
            <h3 class="accordion-header">
                <button
                    class="accordion-button collapsed"
                    type="button"
                    data-bs-toggle="collapse"
                    data-bs-target="#{{ car.model }}"
                    aria-expanded="true"
                    aria-controls="{{ car.model }}"
                >
                    Accordion Item #1
                </button>
            </h3>
            <div id="{{ car.model }}"
                 class="accordion-collapse collapse"
            >
                <div class="accordion-body">
                    {{ car.model }}
                </div>
            </div>
        </div>
    {% endfor %}
</div>